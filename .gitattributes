# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Markdown
*.md text eol=lf

# Configuration files
*.cfg text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Feature files (Gherkin)
*.feature text eol=lf

# Windows scripts
*.bat text eol=crlf
*.ps1 text eol=crlf

# Shell scripts
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.whl binary
*.pyc binary
